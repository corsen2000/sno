%html
	%head
		%title= title
		- unless css_path.nil?
			%link{:rel => "stylesheet", :type => "text/css", :href => css_path}
	%body
		%div{:id => "container"}
			%div{:id => "title_bar"}
				%h1
					%a{:href => root_href}= title
			%div{:id => "bread_crumbs"}
				- bread_crumbs_rel.each do|crumb|
					%a{:href => crumb}= titleize(File.basename crumb, ".*")
			%div{:id => "content"}
				#page_content= content